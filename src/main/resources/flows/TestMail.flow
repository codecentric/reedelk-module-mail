{
  "id": "a99a1043-586a-4e78-8ee2-8385ed2417ce",
  "title": "Test Mail",
  "description": "Test Mail Flow",
  "flow": [
    {
      "implementor": "com.reedelk.rest.component.RestListener",
      "description": "REST Listener",
      "configuration": {"ref": "dc618f88-ab97-4954-a377-7d6b2670627e"},
      "path": "/send",
      "method": "GET",
      "streaming": "AUTO",
      "response": {
        "body": "#[message.payload()]",
        "status": 200
      },
      "errorResponse": {
        "body": "#[error]",
        "status": 500
      }
    },
    {
      "implementor": "com.reedelk.core.component.ScriptEvaluator",
      "description": "Create parts",
      "mimeType": "*/*",
      "script": "CreateMailAttachments.js"
    },
    {
      "implementor": "com.reedelk.mail.component.MailSend",
      "description": "Send Email",
      "connectionConfiguration": {"ref": "3d8459aa-339f-4532-bb2d-e1a5ab70d5f2"},
      "from": "info@reedelk.com",
      "to": "#[['gironi.lorenzo@gmail.com','info@reedelk.com'].join(',')]",
      "subject": "This is a test",
      "body": {
        "content": "<h1>Hello<\/h1><p>Super duper<\/p>",
        "contentType": "text/html"
      },
      "cc": "",
      "bcc": "",
      "attachmentsMap": "#[message.payload()]",
      "attachments": [
        {
          "name": "my-super-attachment",
          "sourceType": "EXPRESSION",
          "expression": "#['hello test']",
          "fileName": "my-hello-expression.txt"
        },
        {
          "name": "myFileAttachment",
          "contentType": "image/jpeg",
          "sourceType": "FILE",
          "file": "/Users/lorenzo/Desktop/fffff.jpg",
          "fileName": "overidden-picture.jpg"
        },
        {
          "name": "myPayload",
          "sourceType": "EXPRESSION",
          "expression": "#['this is my file content']",
          "fileName": "supertest"
        }
      ]
    }
  ]
}